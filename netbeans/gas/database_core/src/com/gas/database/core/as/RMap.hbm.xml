<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
        "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">

<hibernate-mapping package="com.gas.domain.core.ren">
   
    <class name="RMap">
        <id name="hibernateId" column="rmapId">
            <generator class="increment" />
        </id>  
        <set name="entries" cascade="all,delete-orphan" lazy="false" >
            <key column="rmapId" />
            <many-to-many column="entryId" unique="true" class="RMap$Entry" />
        </set> 
        
        <many-to-one name="inputParams" 
             column="inputParamsId" 
             unique="true"
             not-null="false" cascade="all" lazy="false"/>                        
    </class>
    
    <class name="RMap$Entry">
        <id name="hibernateId" column="entryId">
            <generator class="increment" />
        </id>        
        <property name="name" /> 
        <property name="seq" />
        <property name="visual" />
        <property name="start" /> 
        <property name="end" />         
        <property name="overhang"/>
        <property name="downstreamCutType"/>
        <primitive-array name="downstreamCutPos"> 
            <key column="renId"/> 
            <index column="IDX"/> 
            <element type="int"/> 
        </primitive-array>

        <primitive-array name="upstreamCutPos" > 
            <key column="renId"/> 
            <index column="IDX"/> 
            <element type="int"/> 
        </primitive-array> 
        
    </class>
    
    <class name="RMap$InputParams">
        
        <id name="hibernateId" column="inputParamsId">
            <generator class="increment" />
        </id>        
        <property name="renListName" type="text"/>
        <property name="minOccurence" />
        <property name="maxOccurence" />
        <property name="allow" />
        <property name="startPos" />
        <property name="endPos" />
  
        <set name="renNames" cascade="all,delete-orphan" lazy="true">
            <key column="inputParamsId"/>
            <element column="renName" type="string"/>
        </set>
        
    </class>

</hibernate-mapping>
