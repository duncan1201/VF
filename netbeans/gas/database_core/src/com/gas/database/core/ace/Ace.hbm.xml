<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
        "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">

<hibernate-mapping package="com.gas.domain.core.ace">

    <class name="ACE$Contig">
        <id name="hibernateId" column="contigId">
            <generator class="increment" />
        </id>
        <property name="name" />
        <property name="complemented" />
        <property name="sequence" type="text" />
        <property name="baseQualities" type="text" />
        
        <map name="reads" cascade="all,delete-orphan">
            <key column="id" />
            <index column="name" type="string" />
            <many-to-many column="readId" unique="true" class="ACE$Read"/>
        </map>     
        
        <set name="baseSegments" cascade="all,delete-orphan">
            <key column="contigId" />
            <many-to-many column="bsId" unique="true" class="ACE$BS" />
        </set>
        
    </class>

    <class name="ACE$Read">
        <id name="hibernateId" column="readId">
            <generator class="increment" />
        </id>
        <property name="name" />
        <property name="complemented" />
        <property name="paddedStart" />
        <property name="sequence" type="text" />
        <property name="qualClippingStart" />
        <property name="qualClippingEnd" />
        <property name="alignClippingStart" />
        <property name="alignClippingEnd" />
        <property name="dataSource" type="text"/>
    </class>
    
    <class name="ACE$BS">
        <id name="hibernateId" column="bsId">
            <generator class="increment" />
        </id>                             
        <property name="paddedStart" />
        <property name="paddedEnd" />
        <property name="readName" />
    </class>    

</hibernate-mapping>
