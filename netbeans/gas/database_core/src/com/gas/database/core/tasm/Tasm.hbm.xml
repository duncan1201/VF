<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
        "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">

<hibernate-mapping package="com.gas.domain.core.tasm">

    <class name="Condig">
        <id name="hibernateId" column="condigId">
            <generator class="increment" />
        </id>
        <property name="asmblId" />
        <property name="sequence" type="text" />
        <property name="lsequence" type="text" />
        <property name="redundancy" />
        <property name="percentN" />
        <property name="seqNO" />
        
        <list name="qualities" cascade="all" >
            <key column="condigId"/>
            <list-index column="idx"/>           
            <element type="integer"/>
        </list>        
        
        <set name="rids" cascade="all,delete-orphan">
            <key column="condigId" />
            <many-to-many column="ridId" unique="true" class="Rid" />
        </set>
        
    </class>



    <class name="Rid">
        <id name="hibernateId" column="ridId">
            <generator class="increment" />
        </id>
        <property name="seqName" />
        <property name="asm_lend" />
        <property name="asm_rend" />
        <property name="seq_lend" />
        <property name="seq_rend" />
        <property name="best" />
        <property name="offset" />
        <property name="lsequence" type="text"/>
        
        <set name="kromatograms" cascade="all,delete-orphan" lazy="true">
            <key column="ridId"/>
            <one-to-many entity-name="KromatogramInProject" />
        </set>
        
    </class>

</hibernate-mapping>
