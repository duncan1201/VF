<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
        "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">

<hibernate-mapping package="com.gas.domain.core.primer3">

    <class name="GbOutput">
        <id name="hibernateId" column="gbOutputId">
            <generator class="increment" />
        </id>      
        
        <set name="overlapPrimers" cascade="all,delete-orphan" lazy="true">
            <key column="gbOutputId" />
            <one-to-many class="OverlapPrimer" />
        </set>        
        
    </class>

    <class name="OverlapPrimer">
        <id name="hibernateId" column="overlapPrimerId">
            <generator class="increment" />
        </id>
        <property name="overlapLength" />
        <property name="name" />      
        
        <set name="oligoElements" cascade="all,delete-orphan" lazy="true">
            <key column="overlapPrimerId" />
            <one-to-many class="com.gas.domain.core.primer3.OligoElement" />
        </set>
        
        <set name="flappyEnds" cascade="all,delete-orphan" lazy="true">
            <key column="overlapPrimerId" />
            <one-to-many class="com.gas.domain.core.primer3.OverlapPrimer$FlappyEnd" />
        </set>      
    </class>
        
    <class name="OverlapPrimer$FlappyEnd">
        <id name="hibernateId" column="flappyEndId">
            <generator class="increment" />
        </id>        
        <property name="length" />
    </class>
</hibernate-mapping>
